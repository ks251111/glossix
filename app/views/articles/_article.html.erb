<%# いいね機能 %>
<% if user_signed_in? %>
  <% if @article.liked_by(current_user).present? %>
    <%= link_to article_like_path(@article.id, @article.liked_by(current_user)), method: :delete, remote: true, class: "like-link" do %>
      <i class="fa fa-heart unlike-btn", id="unlike"></i>
    <% end %>
    <%= @article.likes.count %>
  <% else %>
    <%= link_to article_likes_path(@article), method: :post, remote: true, class: "like-link" do %>
      <i class="fa fa-heart like-btn", id="like"></i>
    <% end %>
    <%= @article.likes.count %>
  <% end %>
<% else %>
  <i class="fa fa-heart like-btn"></i>
  <%= @article.likes.count %>
<% end %>