<div class="container">
  <div class="follow">
    <div class="follow-list">
      <h2 class="title">フォロワ一覧</h2>
      <% @users.each do |user| %>
        <%= link_to user_path(user.id) do %>
          <div class="user-name">
            <% if user.image.present? %>
              <%= image_tag user.image, class: "user-icon" %>
            <% else %>
              <%= image_tag "noimage-user.png", class: "user-icon" %>
            <% end %>
            <%= user.nickname %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<% breadcrumb :follower, @user %>