<div class="article-list">
  <%= link_to article_path(article.id) do %>
  <div class="article-mdl-list">
    <div class="article-image">
    <% if article.images.present? %>
      <% article.images.first(1).each do |image| %>
        <%= image_tag image, class: "article-img" %>
      <% end %>
    <% else %>
      <%= image_tag "noimage.jpeg", class: "article-img" %>
    <% end %>
    </div>
  
    <div class="article-info">
      <h3 class="article-title">
        <%= article.title.truncate(15) %>
      </h3>
      <div class="article-text">
        <%= article.text.truncate(15) %>
      </div>
      <div class="post-name">
        <% if article.user.image.present? %>
          <%= image_tag article.user.image, class: "post-user-icon" %>
        <% else %>
          <%= image_tag "noimage-user.png", class: "post-user-icon" %>
        <% end %>
        <%= article.user.nickname %>
      </div>
    </div>
  </div>
  <% end %>
</div>