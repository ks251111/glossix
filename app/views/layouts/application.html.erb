<!DOCTYPE html>
<html>
  <head>
    <title>Glossix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="top-header">
        <div class="nav_left">
          <%= link_to image_tag("logo.jpg", class: :logo), root_path %>
        </div>

        <div class="search-form">
          <%= form_with(url: search_articles_path, local: true, method: :get) do |f| %>
            <%= f.text_field :keyword, placeholder: "検索" %>
            <%= f.submit "検索" %>
          <% end %>
        </div>

        <div class="nav_right">
          <%# ログイン状態 %>
          <% if user_signed_in? %>
            <%= link_to "#{current_user.nickname}", user_path(current_user) %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :DELETE %>
          <%# ログアウト状態 %>
          <% else %>
            <%= link_to "新規登録", new_user_registration_path %>
            <%= link_to "ログイン", new_user_session_path %>
          <% end %>
        </div>
      </div>

      <div class="bottom-header">
        <div class="nav_links">
          <%= link_to "Q＆A", talks_path %>
        </div>
      </div>

    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">©︎ 2021 GLOSSIX</p>
    </footer>
  </body>
</html>
