  <%= form_with(model: @article, local: true) do |f| %>

  <%= render 'layouts/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :title, "タイトル" %><br />
      <%= f.text_field :title, placeholder:"タイトル" %>
    </div>

    <div class="field">
      <%= f.label :text, "本文" %><br />
      <%= f.text_area :text, placeholder:"本文" %>
    </div>

    <div class="field">
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"pulldown"}) %>
    </div>

    <div class="field">
      <%= f.label :image, "画像" %><br />
      <%= f.file_field :image %>
      <div id="image-list"></div>
    </div>

    <div class="send">
      <%= f.submit "投稿する" %>
    </div>
  <% end %>