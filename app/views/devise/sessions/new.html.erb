<div class="container">
  <h2 class="form-title">ログイン</h2>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class="form">
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-text" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-text" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "send-btn" %>
      </div>
    <% end %>
  </div>
  
</div>

<% breadcrumb :login %>