<div class="container">
  <h2 class="form-title">ログイン</h2>

  <div class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-text" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-text" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "send-btn" %>
      </div>
    <% end %>
  </div>
  
</div>